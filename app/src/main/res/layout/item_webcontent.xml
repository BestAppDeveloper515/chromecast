<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_5ROR"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_videoorimage"
        android:padding="@dimen/_20ROR"
        android:src="@mipmap/ic_video"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ROR"
            android:layout_marginLeft="@dimen/_10ROR"
            android:text="Watch Air Crash Investigation episode 10 Online on hotstar.com"
            android:maxLines="2"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="@dimen/_5ROR"
            android:layout_marginLeft="@dimen/_10ROR"
            android:id="@+id/txt_filetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ROR"
            android:maxLines="2"
            android:text="https://www.youtube.com/watch?v=NLmqqimN_6M&amp;list=PUa10nxShhzNrCE1o2ZOPztg&amp;index=35"/>
    </LinearLayout>
</LinearLayout>